{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "homepage_url": "https://www.the4thpillar.com",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": [
    "storage",
    "downloads"
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "matches": [
        "https://the4thpillar.com/*",
        "https://*.the4thpillar.com/*",
        "https://4thtech.io/*",
        "https://*.4thtech.io/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; style-src 'self' 'unsafe-inline'"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "js/injected.js"
      ],
      "matches": [
        "https://the4thpillar.com/*",
        "https://*.the4thpillar.com/*",
        "https://4thtech.io/*",
        "https://*.4thtech.io/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*"
      ]
    }
  ]
}
